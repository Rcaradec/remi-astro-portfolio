---
interface SectionProps {
  sectionLabel: string;
  class?: string;
}

const { sectionLabel, class: additionalClass } = Astro.props;
---

<section
  class={`relative w-full flex flex-col gap-10 items-center justify-center px-4 py-20 sm:py-24 bg-card custom-shadow ${additionalClass || ""}`}
>
  <h2
    class="section-title absolute top-[-20px] h-10 flex items-center px-4 py-2 rounded-full text-cyan dark:text-white text-sm sm:text-normal md:text-lg tracking-tighter dark:bg-zinc-700 bg-slate-800 shadow-xg outline-cyan-500"
  >
    {sectionLabel}
  </h2>
  <slot />
  <div
    class="-z-10 absolute w-full h-full border-dashed border-t border-b x-gradient"
  >
  </div>
  <div
    class="-z-10 absolute w-full h-full border-dashed border-l border-r y-gradient"
  >
  </div>
</section>

<style>
  .x-gradient {
    mask: linear-gradient(
      90deg,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    webkitmask: linear-gradient(
      90deg,
      transparent,
      black 20%,
      black 80%,
      black transparent
    );
  }
  .y-gradient {
    mask: linear-gradient(
      180deg,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    webkitmask: linear-gradient(
      90deg,
      transparent,
      black 20%,
      black 80%,
      black transparent
    );
  }

  .custom-shadow {
    box-shadow: rgba(0, 0, 0, 0.45) 0px 25px 20px -20px;
  }
</style>
