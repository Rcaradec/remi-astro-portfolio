---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Section from "@/components/Section.astro";

import cv from "@cv";
import { Image } from "astro:assets";
import portrait from "../assets/portrait.jpeg";

const {
  about: { sectionLabel, description, motivation },
} = cv;
---

<Layout title="À propos de moi">
  <main
    class="w-full max-w-5xl flex flex-col items-center min-h-screen px-4 sm:px-10"
  >
    <Header class="mb-5" />
    <Section sectionLabel={sectionLabel}>
      <Image
        src={portrait}
        alt="Portrait Rémi Caradec"
        width="300"
        height="300"
        class="rounded-full w-36 h-36 object-cover shadow-lg"
      />
      {description}
      <p>
        {motivation}
      </p>
    </Section>
  </main>
  <Footer />
</Layout>
